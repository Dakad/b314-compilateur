  /* Comments are between delimiters */
  declare and retain
    /* Global declarations */
    b as boolean[2];
    i as integer[2];

  when your turn
    when i[1] = 12 do
      if b[0] = true then
        skip
      done
    done

  by default do
    set b[1] to true
    set i[1] to 23+34

    while i[0] = 12 do
      skip
    done

    while b[1] = false do
      skip
    done
  done